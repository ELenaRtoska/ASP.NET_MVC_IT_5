@model IEnumerable<Lab5.Models.FriendModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idFriend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mestoZiveenje)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idFriend)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mestoZiveenje)
                </td>
                <td>
                    @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }
                    |
                    @if (User.IsInRole("Administrator") || User.IsInRole("User"))
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    }
                    |
                    @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
